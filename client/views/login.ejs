  <script type = "text/javaScript">

    const inpForm = document.getElementById('upload_form');
    const inpUser = document.querySelector('.loginUser')
    const inpPass = document.querySelector('.loginPass')
    const inpSub = document.getElementById('submit-btn')
    
    inpSub.addEventListener('click',function(){
      
      const form = {
        username : inpUser.value,
        password : inpPass.value
      }

      console.log(form)
      var formData = new FormData();
      var xhr = new XMLHttpRequest()
      const requestData = `username=${form.username}&password=${form.password}`

      // video를 입력하지 않으면 alert 띄우고  redirect
      if( inpUser.value === ''){
        alert("Write in Your Id")
        event.preventDefault()
        return false;
      }else if( inpPass.value === ''){
        alert("Write in Your password")
        event.preventDefault()
        return false;
      }

      // response 처리하기
      xhr.onload = function(){
        
        console.log(this.responseText)

          if(xhr.status === 200){
              console.log("Server responded appropriately with 200 status")
              alert("login Success")
              window.location.href = "/"
          }
          else if( xhr.status === 401){
              alert("Login Failed")
              event.preventDefault()
              return;
          }
          else if( xhr.status === 401){
              alert("No user found")
              event.preventDefault()
              return;
          }
      }

      xhr.open('POST','/login', true);
      xhr.setRequestHeader("Content-type", "application/x-www-form-urlencoded");
      xhr.send(requestData);

      console.log(requestData)
      event.preventDefault();

      return ;
    })

  </script>


