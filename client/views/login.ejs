  <section class="login">
    <form class="login-container" enctype = "multipart/form-data" method = 'POST' action = "/login" id = 'upload_form'>
        <h2>Are you are Administer?</h2>
        <br/>
        <div class="User">
          <input type="text" class="loginUser" placeholder = "Id">
        </div>
        <br/>
        <div class="Pass">
          <input type="password" class="loginPass" placeholder = "Password">
        </div>
        <br/>
        <button style = "background-color: white; border: lightblue 1px solid; color : rgb(58, 157, 190); padding: 3px 7px;" type="submit" id="submit-btn" class='btn-deactive'>
          Submit
        </button>
    </form>
